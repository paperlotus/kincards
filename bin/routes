# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /login/:user/:pin           controllers.Application.authenticate(user: String, pin: String)
POST	/authenticate				controllers.Application.authentication()
POST    /register/:email/:user/:pin                    controllers.Application.register(email: String, user: String, pin: String)
POST    /registration               controllers.Application.registration()
GET     /dashboard                  controllers.Dashboard.contacts()
GET     /logout                     controllers.Application.logout()
GET     /login                      controllers.Application.login()
GET     /profile                    controllers.Profile.editProfile()
POST    /profile	                controllers.Profile.updateProfile()
GET     /addContact                 controllers.Requests.addContact()
POST    /addContact	                controllers.Requests.requestContact()
POST    /addKinCard/:userName	    controllers.Requests.addKinCard(userName: String)
POST    /mergeContact	            controllers.Requests.mergeContacts()
POST    /uploadContact	            controllers.Requests.uploadContact()
GET		/myRequests					controllers.Requests.myRequests()
POST	/accept:ph					controllers.Requests.acceptRequest(ph:String)
POST	/reject:ph					controllers.Requests.rejectRequest(ph:String)
GET		/settings					controllers.Profile.getSettings()
POST	/settings					controllers.Profile.updateSettings()
POST	/forgotPassword				controllers.Application.recoverPassword()
GET		/forgotPassword				controllers.Application.forgotPassword()
GET		/company					controllers.Application.company()
GET     /assets/images/uploads/:file_name        controllers.ServeImage.at(file_name)
GET		/privacy					controllers.Application.privacy()
GET		/terms						controllers.Application.terms()
GET		/feedback					controllers.Profile.feedback()
POST	/feedback					controllers.Profile.sendFeedback()
GET		/contact					controllers.Application.contact()
POST	/contact					controllers.Application.sendContact()
GET     /getImage                   controllers.Application.getImage(id: Long)
POST	/delete						controllers.Profile.deleteProfile()
POST	/export:ph					controllers.Dashboard.exportVCF(ph:String)
POST	/email/:email				controllers.Requests.emailContact(email:String)
POST	/share/:ph/:email			controllers.Requests.shareContact(ph:String, email:String)
GET		/business					controllers.Application.business()
GET 	/social						controllers.Application.socialConnections()
GET		/mycard/:user				controllers.Application.getMyCard(user: String)
GET		/myKinCard/:user			controllers.Profile.getMyCard(user: String)
GET		/mkt						controllers.Application.mktEmails()
POST	/update						controllers.Profile.updatePublicSettings()
POST	/search						controllers.Application.search()
GET		/goog						controllers.GoogleContactsAccess.goog()

#Twitter Authentication
GET     /twitter/homeTimeline controllers.Twitter.homeTimeline()
GET     /twitter/auth         controllers.Twitter.auth()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /emailTemplate.html		    controllers.Assets.at(path="/public", file = "emailTemplate.html")
GET     /sitemap.xml    			controllers.Assets.at(path="/public", file = "sitemap.xml")
